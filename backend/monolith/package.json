{
  "name": "dronedoc-monolith",
  "version": "1.0.0",
  "type": "module",
  "description": "Monolithic backend for Integram - consolidates orchestrator, YouTube analytics, MCP server, and accounting services",
  "main": "src/index.js",
  "scripts": {
    "start": "node --max-old-space-size=2048 src/index.js",
    "start:high-mem": "node --max-old-space-size=4096 src/index.js",
    "dev": "node --watch --max-old-space-size=2048 src/index.js",
    "resilient-logger": "node src/resilient-logger.js",
    "resilient-logger:watch": "node --watch src/resilient-logger.js",
    "resilient-logger:deploy": "./scripts/deploy-resilient-logger.sh production",
    "resilient-logger:deploy:dev": "./scripts/deploy-resilient-logger.sh development",
    "verify-env": "node scripts/verify-env.js",
    "verify-env-pm2": "node scripts/verify-env-pm2.js",
    "prestart": "node scripts/verify-env.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node --test tests/integration/*.test.js",
    "test:all": "node --test tests/**/*.test.js",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "lint:agents": "eslint src/agents/**/*.js src/core/**/*.js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js'",
    "docs:generate": "echo 'Generating documentation...' && mkdir -p docs",
    "pm2:deploy": "./scripts/deploy-pm2.sh production",
    "pm2:troubleshoot": "./scripts/troubleshoot-pm2.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js --update-env",
    "pm2:stop": "pm2 stop dronedoc-monolith",
    "pm2:logs": "pm2 logs dronedoc-monolith",
    "pm2:status": "pm2 status",
    "setup-anthropic-key": "node scripts/setup-anthropic-key.js",
    "init-default-user": "node src/scripts/init-default-user.js",
    "verify-ai-providers": "node scripts/verify-ai-providers.js",
    "test-ai-connection": "node scripts/test-ai-connection.js",
    "start:journey-agent": "node start-journey-agent.mjs",
    "journey-agent:status": "curl http://localhost:8081/api/purchase-journey-testing/status | jq",
    "journey-agent:stop": "curl -X POST http://localhost:8081/api/purchase-journey-testing/stop"
  },
  "keywords": [
    "monolith",
    "backend",
    "orchestrator",
    "youtube-analytics",
    "accounting",
    "mcp",
    "agent",
    "ai",
    "dronedoc"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@bitwarden/sdk-napi": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@octokit/rest": "^21.0.2",
    "@vue/compiler-sfc": "^3.4.0",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.5",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "bull": "^4.16.3",
    "cheerio": "^1.1.2",
    "chokidar": "^3.5.3",
    "chromadb": "^1.9.2",
    "chromadb-default-embed": "^2.13.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "form-data": "^4.0.1",
    "fs-extra": "^11.2.0",
    "googleapis": "^144.0.0",
    "graphlib": "^2.1.8",
    "helmet": "^8.0.0",
    "https-proxy-agent": "^7.0.6",
    "input": "^1.0.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^25.0.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "marked": "^15.0.12",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-pty": "^1.0.0",
    "nodemailer": "^7.0.11",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.56.1",
    "socks-proxy-agent": "^8.0.5",
    "stripe": "^20.1.0",
    "telegram": "^2.26.22",
    "tough-cookie": "^6.0.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.18.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Integram Team",
  "license": "MIT"
}
