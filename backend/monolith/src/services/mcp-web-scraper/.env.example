# MCP Web Scraper Configuration Example
# Copy this file to .env and configure with your settings

# =============================================================================
# API Configuration
# =============================================================================

# Optional API token for authentication
# API_TOKEN=your_secret_token_here

# =============================================================================
# Proxy Configuration
# =============================================================================

# Comma-separated list of proxies in format: ip:port:username:password
# Leave empty to scrape without proxies
PROXY_LIST=

# Example with proxies:
# PROXY_LIST=123.45.67.89:8080:user1:pass1,98.76.54.32:8080:user2:pass2

# Proxy type: datacenter, residential, mobile, isp
PROXY_TYPE=datacenter

# Proxy rotation strategy: round-robin, random, sticky-session, geo-targeted
PROXY_ROTATION=round-robin

# Proxy timeout in milliseconds
PROXY_TIMEOUT=30000

# Number of retries for failed proxy requests
PROXY_RETRY_COUNT=3

# =============================================================================
# Rate Limiting
# =============================================================================

# Rate limit format: <number>/<duration><unit>
# Units: m (minutes), h (hours), d (days)
# Examples:
#   100/1h  = 100 requests per hour
#   1000/1d = 1000 requests per day
#   10/1m   = 10 requests per minute
RATE_LIMIT=1000/1d

# =============================================================================
# Browser Configuration
# =============================================================================

# Maximum number of concurrent browser instances
MAX_CONCURRENT_BROWSERS=5

# Run browsers in headless mode (true = no visible window)
BROWSER_HEADLESS=true

# Browser operation timeout in milliseconds
BROWSER_TIMEOUT=60000

# =============================================================================
# Request Configuration
# =============================================================================

# HTTP request timeout in milliseconds
REQUEST_TIMEOUT=60000

# User agent string for HTTP requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# =============================================================================
# Features
# =============================================================================

# Enable pro features (planned)
PRO_MODE=true

# Enable debug logging
DEBUG=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# CAPTCHA Solvers (Optional)
# =============================================================================

# AntiCaptcha API key
# ANTICAPTCHA_KEY=your_anticaptcha_key

# 2Captcha API key
# TWOCAPTCHA_KEY=your_2captcha_key

# =============================================================================
# Proxy Service Integrations (Planned)
# =============================================================================

# Proxy6.net API key
# PROXY6_API_KEY=your_proxy6_key

# Webshare API key
# WEBSHARE_API_KEY=your_webshare_key

# IPRoyal API key
# IPROYAL_API_KEY=your_iproyal_key
